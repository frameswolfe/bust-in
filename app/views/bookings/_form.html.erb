<div class="devise_form_container">
  <%= simple_form_for [@toilet, @booking] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
    <%= f.input :start_time, as: :date, html5: true,
        required: true,
        autofocus: true,
        label: false,
        placeholder: 'Start Time',
        input_html: { class: 'devise_form_input col-sm-3'}%>
      <%# <%= f.input :end_time, as: :date, html5: true,
        required: true,
        autofocus: true,
        label: false,
        placeholder: 'End Time',
        input_html: { class: 'devise_form_input col-sm-3'}%> %>
    <div class="form-actions">
      <div class="row col-sm-3 text-center">
        <%= f.button :submit, class: 'devise_form_submit green' %>
      </div>
      <div class="multi_option row btn-sm-3 col-sm-3 text-right " id="back_button_text">
        <%= link_to 'Bookings Home', bookings_path, class: 'back_button btn' %>
        <%= link_to 'Choose another Toilet', toilets_path, class: 'back_button btn' %>
      </div>
    </div>
  <% end %>
</div>
