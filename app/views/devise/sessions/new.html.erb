<div class="devise_container">
  <%= image_tag "toilet-left"  %>
  <div class="devise_form_container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
          required: false,
          autofocus: true,
          placeholder: 'Email',
          label:false,
          input_html: { autocomplete: "email", class: 'devise_form_input' } %>
        <%= f.input :password,
                  required: false,
                  placeholder: 'Password',
                  label:false,
                  input_html: { autocomplete: "current-password", class: 'devise_form_input' } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'devise_form_submit' %>
      </div>
    <% end %>

    <div class="shared_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
