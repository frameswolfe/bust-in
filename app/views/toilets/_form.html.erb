<div class="devise_form_container">
  <%= simple_form_for(@toilet) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :location,
        required: true,
        autofocus: true,
        label: false,
        placeholder: 'Location',
        input_html: { class: 'devise_form_input'}%>
      <%= f.input :description,
        required: true,
        label: false,
        placeholder: 'Description',
        input_html: { class: 'devise_form_input'}%>
      <%= f.input :access_info,
        required: true,
        label: false,
        placeholder: 'Access Info',
        input_html: { class: 'devise_form_input'}%>

      <%= f.input :cost_per_minute,
        required: true,
        label: false,
        placeholder: 'Cost per minute',
        input_html: { class: 'devise_form_input'}%>
    </div>

  <div class="shared_link">
    <div class="form-actions multi_option">
      <%= link_to 'Back', toilets_path, class: 'back_button btn' %>
      <%= f.button :submit, class: 'devise_form_submit green' %>
    </div>
  </div>
  <% end %>
</div>
