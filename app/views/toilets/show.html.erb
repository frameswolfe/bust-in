        <div class="row-lg-6"><h3>About<h3></div>
        <div class="row-lg-6"><%= link_to 'Book Now', new_toilet_booking_path(@toilet), :class=> "btn btn-primary" %>
      </div>
    </div>
    <p><%= @toilet.description %></p>
